<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.primalpond.hunt"
    android:versionCode="14"
    android:versionName="alpha13" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="18"/>

    <uses-feature android:name="android.software.live_wallpaper" />
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application
        android:icon="@drawable/ic_launcher_thehunt"
        android:label="@string/app_name" android:name="com.primalpond.hunt.MyApplication"
        android:allowBackup="true">
        <activity 
            android:name="com.primalpond.hunt.TheHunt"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/ActionBarOverlay">
            <intent-filter>
            	<action android:name="android.intent.action.MAIN" />
            	<category android:name="android.intent.category.LAUNCHER" />
        	</intent-filter>
        </activity>
        <service
            android:label="@string/app_name"
            android:name="com.primalpond.hunt.livewallpaper.TheHuntLive"
            android:permission="android.permission.BIND_WALLPAPER">
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>
        	<meta-data android:name="android.service.wallpaper" android:resource="@xml/thehunt" />
        </service>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="182be8768d69459d465997aa6fbe61684c12127f"/>
         <meta-data
             android:name="com.google.android.gms.games.APP_ID"
             android:value="@string/app_id" />

    </application>
    

</manifest>