<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

    	<ToggleButton
            android:id="@+id/aiToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onToggleClicked"
            android:textOff="@string/ai"
            android:textOn="@string/ai"
            android:layout_alignParentLeft="true"/>
<!--     	<ToggleButton -->
<!--     	    android:id="@+id/foodToggle" -->
<!--     	    android:layout_width="wrap_content" -->
<!--     	    android:layout_height="wrap_content" -->
<!--     	    android:onClick="onToggleClicked" -->
<!--     	    android:textOn="Food" -->
<!--     	    android:textOff="Net" -->
<!--     	    android:layout_centerInParent="true"/> -->
        <Button 
	        android:id="@+id/flopBack"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Flop back"
	        android:onClick="onButtonClicked"
	        android:layout_centerInParent="true"/>
        <Button 
	        android:id="@+id/flopRight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Flop right"
	        android:onClick="onButtonClicked"
	        android:layout_toRightOf="@id/flopBack"/>
    	<Button 
            android:id="@+id/flopLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flop left"
            android:onClick="onButtonClicked"
            android:layout_toLeftOf="@id/flopBack"/>
		<TextView 
		    android:id="@+id/caughtText"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Score: "
        	android:layout_toRightOf="@id/flopRight"
        	android:layout_centerVertical="true"/>
		<TextView 
        	android:id="@+id/caughtCounter"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@id/caughtText"
        	android:layout_centerVertical="true"/>
    	<TextView 
        	android:id="@+id/msPerFrame"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <d3kod.thehunt.MyGLSurfaceView
        android:id="@+id/glSurfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>